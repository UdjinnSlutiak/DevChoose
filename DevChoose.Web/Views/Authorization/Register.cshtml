@model DevChoose.Services.Requests.RegisterRequest

@{
    ViewData["Title"] = "Registration";
}

<h1 style="font-weight:bold">Registration</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="" style="marker:none"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="Email" class="form-control" />
                <label>This is your own email. You may use it, for example, to restore your account.</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="font-weight:bold;"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <label>We recommend your password to contain upper and lowercase letters, numbers and symbols. It will make it more difficult to stole your account.</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="Role" class="form-control" />
                <label>Enter 'Developer' if you are searching for some customer, or enter 'Customer' if you are looking for some developers.</label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="FullName" class="form-control" />
                <label>Enter your own name.</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="CompanyName" class="form-control" />
                <label>Enter the name of your company.</label>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="About" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="About" class="form-control" />
                <label>Describe your company.</label>
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="Location" class="form-control" />
                <label>Enter where your company locates.</label>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="Phone" class="form-control" />
                <label>Enter your contact phone number.</label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>