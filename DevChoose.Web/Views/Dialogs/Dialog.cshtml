@model DevChoose.Services.Requests.GetDialogRequest

@{
    ViewData["Title"] = "Dialog with " + Model.Companion.FullName;
}

<div style="width: 100%; height: 85%">
    @if (Model.Messages != null && Model.Messages.Count() != 0)
    {
        @foreach (var item in Model.Messages)
        {
            if (!(item.SenderId == Model.Companion.Id))
            {
                <div style="text-align: right; width: 100%;">
                    <div style="width: 40%; background-color: lightblue; margin-right: 0; margin-left: auto;">
                        <p>@item.Text</p>
                        <p><i>@item.Sent</i></p>
                    </div>
                </div>
            }
            else
            {
                <div style="text-align: left; width: 100%;">
                    <div style="width: 40%; background-color: blue; margin-right: auto; margin-left: 0; ">
                        <p>@item.Text</p>
                        <p><i>@item.Sent</i></p>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <h3 style="text-align: center;">There is no messages</h3>
    }
</div>

<hr />

<div style="width: 100%;">
    <form method="post" asp-controller="dialogs" asp-action="send" asp-route-id="@Model.Dialog.Id">
        <div style="display: block;">
            <div class="form-group">
                <textarea style="width: 100%;" name="text"></textarea>
            </div>

            <div class="form-group" style="text-align: right;">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>