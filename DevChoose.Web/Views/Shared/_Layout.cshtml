<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="color:white;" asp-area="" asp-controller="authorization" asp-action="main" asp-route-skip="0" asp-route-take="20"><b>DevChoose</b></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="developers" asp-action="developers" asp-route-skip="0" asp-route-take="20">Developers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="dialogs" asp-action="dialogs" asp-route-skip="0" asp-route-take="20">Dialogs</a>
                        </li>
                    </ul>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div style="display:flex; flex-flow:row">
                        <ul class="navbar-nav">
                            <li class="nav-item" style="marker:none">
                                <a class="nav-link text-light">@User.Identity.Name</a>
                            </li>

                            <li class="nav-item" style="marker:none">
                                <a class="nav-link text-light" asp-area="" asp-controller="authorization" asp-action="logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item" style="marker:none">
                            <a class="nav-link text-light" asp-area="" asp-controller="authorization" asp-action="register">Register</a>
                        </li>
                    </ul>

                    <a class="nav-link" style="text-align:center; padding:0,10px; color:white;">  or  </a>

                    <ul class="navbar-nav">
                        <li class="nav-item" style="marker:none">
                            <a class="nav-link text-light" asp-area="" asp-controller="authorization" asp-action="login">Log In</a>
                        </li>
                    </ul>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - DevChoose.Web
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
